<div class="work-point">
        <p>WORK POINT</p>
</div>
<div class="div-main" id="div-main-register">
    <div class="div-auth">
        <p class="titulo-p">REGISTRAR USUÁRIO</p>
        <form action="/register" method="POST" class="form-div">
            <input type="text" name="name" placeholder="Nome" required>

            <input type="text" name="email" placeholder="Email" required>
            
            <input type="text" id="cpf" name="cpf" maxlength="11" minlength="11" placeholder="CPF - apenas números"  required>

            <input type="password" name="password" placeholder="Senha" required>        

            <input type="password" name="confirmpassword" placeholder="Confirmar Senha" required>     
            
            <div class="register-nivel-usuario"> 
                <label>Nível do usuário:</label>
                <div><input name="nivel" type="radio" value="0"><label for="comum">Comum</label></div>
                <div><input name="nivel" type="radio" value="1"><label for="master">Master</label></div>

            </div>
            <input type="submit" id="submit-button-register" value="Criar conta">

        </form>
    </div>
</div>
<script src="js/registerSettings.js"></script>